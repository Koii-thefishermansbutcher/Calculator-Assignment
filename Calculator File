num1 = float(input("Enter first number: "))
sign = input("Enter sign (+, -, *, /): ")
num2 = float(input("Enter second number: "))
if sign == '+':
    print(num1 + num2)
elif sign == '-':
    print(num1 - num2)
elif sign == '*':
    print(num1 * num2)
elif sign == '/':
    print(num1 / num2)
else:
    print("Invalid sign")
    
